@using Gym.Helpers
@model IEnumerable<Gym.Models.SubscriptionViewModel>

@{
    ViewData["Title"] = "Subscriptions";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <h1 class="mt-4 mb-4 text-center text-primary">Subscriptions</h1>

    @if (!string.IsNullOrWhiteSpace(TempData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success btn-sm">Create New</a>
    </div>

    <form asp-controller="Subscription" asp-action="Index" method="get" class="mb-3">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" name="filterTerm" placeholder="Search" value="@ViewBag.FilterTerm" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary btn-sm">Search</button>
            </div>
        </div>
    </form>

    <p class="text-danger">@ViewBag.ErrorMessage</p>

    <table class="table table-striped table-hover">
        <thead class="thead-light">
            <tr>
                <th scope="col">Code</th>
                <th scope="col">Description</th>
                <th scope="col">Number of Months</th>
                <th scope="col">Week Frequency</th>
                <th scope="col">Total sessions</th>
                <th scope="col">Total Price</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subscription in Model)
            {
                <tr>
                    <td>@subscription.Code</td>
                    <td>@subscription.Description</td>
                    <td>@subscription.NumberOfMonths</td>
                    <td>@subscription.WeekFrequency</td>
                    <td>@subscription.TotalNumberOfSessions</td>
                    <td>@subscription.TotalPrice</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Subscription Actions">
                            <a asp-action="Details" asp-route-id="@subscription.ID" class="btn btn-info btn-sm">Details</a>

                            <a asp-action="Activate" asp-route-id="@subscription.ID" class="btn btn-success btn-sm">Activate</a>

                            @if (User.IsInRole(Constants.AdminRole))
                            {
                                <a asp-action="Edit" asp-route-id="@subscription.ID" class="btn btn-primary btn-sm">Edit</a>

                                <form asp-action="Delete" asp-route-id="@subscription.ID" method="post" onsubmit="return confirm('Are you sure you want to delete this subscription?');" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    h1 {
        font-family: 'Arial', sans-serif;
        font-size: 2.0rem;
        font-weight: bold;
    }

    .table-hover tbody tr:hover {
        background-color: cornflowerblue;
    }

    .btn {
        transition: transform 0.2s;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .btn-success {
        background-color: #28a745;
        border: none;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-info {
        background-color: #17a2b8;
        border: none;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

    .btn-success:hover,
    .btn-primary:hover,
    .btn-info:hover,
    .btn-danger:hover {
        filter: brightness(90%);
    }

    .thead-light {
        background-color: lightblue;
        color: white; 
    }

    .input-group-sm .form-control,
    .input-group-sm .input-group-append .btn {
        height: calc(1.5em + .75rem + 2px);
        font-size: .875rem;
    }
</style>
